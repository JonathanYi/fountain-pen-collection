<h1>Log In</h1>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
  <br></br>
<% end %>
<form action="login" method="post">
  <label>Username:</label>
  <input type="text" name="username">
  <br></br>
  <label>Password:</label>
  <input type="text" name="password">
  <br></br>
  <input type="submit" value="Submit">
</form>
